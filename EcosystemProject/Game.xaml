<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:drawable="clr-namespace:EcosystemProject"
             x:Class="EcosystemProject.Game"
             Title="Game"
             BackgroundColor="ForestGreen"
             Shell.PresentationMode="NotAnimated"
             Shell.NavBarIsVisible="false"
             >
            

    <ContentPage.Resources>
        <drawable:Simulation x:Key="Simulation" />
    </ContentPage.Resources>

    <VerticalStackLayout>
        <GraphicsView 
                      x:Name="graphics"
                      Drawable="{StaticResource Simulation}"
                      HeightRequest="700"
                      WidthRequest="1400">
            
        </GraphicsView>
        <Button
                x:Name="PauseBtn"
                Text="Pause"
                FontSize="28"
                TextColor="Black"
                BorderColor="#262626"
                BorderWidth="2"
                BackgroundColor="White"
                SemanticProperties.Hint="Pause the simulation"
                Clicked="PauseClicked"
                HorizontalOptions="Center"
                VerticalOptions="Start" 
                />
    </VerticalStackLayout>
    
</ContentPage>